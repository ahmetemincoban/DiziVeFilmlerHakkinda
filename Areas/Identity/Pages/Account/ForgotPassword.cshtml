@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="card text-white bg-dark mb-3" style="max-width: 28rem;">
            <div style="text-align: center; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" class="card-header"><h1>Filmler & Diziler Hakkında</h1></div>
                <div class="card-body">
                    <h5 class="card-title text-center">Lütfen Eposta Adresinizi Giriniz</h5>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
    <div class="col-4"></div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
