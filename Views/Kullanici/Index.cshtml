@model List<AppUser>
<div class="jumbotron mt-5">
    <h3 class="text-success">Kullanıcı İşlemleri</h3>
    <a asp-action="Create" class="btn btn-outline-success my-3">Kullanıcı Ekle</a>
    <table class="table table-dark table-striped table-bordered text-center">
        <thead>
            <th>Kullanıcı Maili</th>
            <th>İşlemler</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="RolAyarla" asp-route-id="@item.Id" class="btn btn-info" >Rol Ayarla</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>