@model DiziveFilmHakkinda.Models.IcerikModeli
<style>
    h3,h5,a,p,small,button{
        font-family: Titillium Web;
    }
</style>
<p class="mb-5">&#160;</p>
<div class="card" style="max-width: 1110;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="/Images/@Model.Gorseller.FirstOrDefault().DosyaAdi" class="card-img" alt="@Model.Baslik içeriğinin afişi">
        </div>
        <div class="col-md-8" style="align-self: center;">
            <div class="card-body">
                <h3 class="text-danger">Bu kaydı silmek istediğinizden emin misiniz?</h3>
                <h5 class="card-title">@Model.Baslik</h5>
                <p class="card-text">@Model.Aciklama</p>
                <p class="card-text">
                    <small class="text-muted">
                        <i class="fab fa-imdb"></i> @Model.IMDB || <i class="fas fa-quote-right"></i> @Model.Tur 
                    </small>
                </p>
                <p class="card-text" style="text-align: center;">
                    <small>
                        <form asp-action="Delete" style="text-align: center;"> 
                            <input type="hidden" asp-for="ID">
                            <a style="width: calc(35%);" class="btn btn-dark" asp-action="Index">Anasayfa <i class="fas fa-home"></i></a>
                            <button style="width: calc(35%);" type="submit" class="btn btn-danger">Sil <i class="fas fa-trash"></i></button>
                        </form>
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>
