@model IEnumerable<DiziveFilmHakkinda.Models.KategoriModeli>


<h1 class="text-light">Kategoriler</h1>
    <a class="btn btn-primary" asp-action="Create">Yeni Kategori Oluştur</a>
<table class="table table-striped table-dark text-light table-bordered" style="width: 750px; text-align: center; margin: auto;">
    <thead>
        <tr>
            <th>
              Kategori @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detayları</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Kategoriyi Sil</a> |
                <a class="btn btn-secondary" asp-controller="IcerikKontrol" asp-action="KategorininIcerikleri" asp-route-id="@item.Id">İçerikleri</a>

            </td>
        </tr>
}
    </tbody>
</table>
